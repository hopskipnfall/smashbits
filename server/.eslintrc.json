{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "linebreak-style": "off",
        "arrow-parens": ["warn", "as-needed"],
        "func-names": "off",
        "prefer-arrow-callback": "warn",
        "no-use-before-define": "off",
        "radix": "off"
    }
}
