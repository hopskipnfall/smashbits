  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}/client"
    },
    {
      "name": "Serverless Debug",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}/server",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "debug"],
      "port": 9229 
    }
  ]
}
